.chat-side
  .chat-side__user
    .chat-side__user-content
      .chat-side__user-content-name
        = current_user.name
      .chat-side__user-content--new-group
        = link_to new_group_path do
          =fa_icon 'pencil-square-o', class: 'icon'
      .chat-side__user-content--edit-user
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'

  .chat-side__groups
    .chat-side__groups-list
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .chat-side__group
            .chat-side__group-name
              = group.name
            .chat-side__group-message
              = group.show_last_message
