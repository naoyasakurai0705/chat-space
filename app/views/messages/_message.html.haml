.chat-main__body--messages-list{ "data-message-id": message.id}
  .chat-main__body--message
    .chat-main__body--message-name
      = message.user.name
    .chat-main__body--message-time
      = message.created_at.strftime("%Y/%m/%d %H:%M")
    .chat-main__body--message-body
      = message.body if message.body.present?
      =image_tag message.image.url,class: 'message__image'if message.image.present?
