.contents
  = render 'shared/side_bar'

  .chat-main
    .chat-main__header
      .chat-main__header--group
        .chat-main__header--group-name おはようございます
        %a.chat-main__header--group-edit-btn(href='#') edit
      .chat-main__header-members
        MEMBER:
        %i sakurai

    .chat-main__body
      .chat-main__body--messages-list
        .chat-main__body--message
          .chat-main__body--message-name sakurai
          .chat-main__body--message-time 2018/07/03 17:20:00
          .chat-main__body--message-body 今日も頑張ります

    .chat-main__footer
      / %form.chat-main__footer-form
      = form_for [@group, @message] , html: {class:'chat-main__footer-form'} do |f|
        .chat-main__footer-body
          / %input.message(placeholder="type a message" type="text")
          = f.text_field :body, class: 'message', placeholder: 'type a message'
          / %label.chat-file
          = f.label :image, class: 'chat-file' do
            / %input.image
            = f.file_field :image, class: 'image'
            / %i.fa.fa-image
            = fa_icon 'picture-o', class: 'fa fa-image'
          .field_with_errors
        / %input.submit(type="submit" name="commit" value="Send" )
        = f.submit 'Send', class: 'submit'
